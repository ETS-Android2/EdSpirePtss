<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="313dp"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_background"
            android:layout_width="111dp"
            android:layout_height="104dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="#40d7cb"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/img_item_course"
                android:layout_width="111dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:src="@drawable/edspirelogo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/cardview_background"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="111dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Android Development, Building Layouts\nAndroid Studio, Views, and more" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="84dp"
            android:layout_marginTop="127dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey"
            android:textSize="16sp"
            tools:text="..........................................................." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>